{
  "AWSTemplateFormatVersion": "2010-09-09",

  "Description": "Cloud formation code for sale data summarization sns resource",

  "Metadata": {},

  "Parameters": {
     "SubscriptionEmail": {
       "Type": "String",
       "Default": "teechtutorial@gmail.com",
       "Description": "Enter the email to Subscribe the Notifications."
     }
  },

  "Resources": {
    "SNSTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "DisplayName": "Sale Data Summarization Notification",
        "TopicName": "teech-tutorial-sales-summarize-notification",
        "Subscription": [{"Endpoint": {"Ref": "SubscriptionEmail"}, "Protocol": "email"}],
        "Tags": [{"Key": "Project", "Value": "sale-summarize"}, {"Key": "Application", "Value": "sns"}]
      }
    }
  },

  "Outputs": {
    "SNSTopicArn": {"Description": "Sale summarize SNS topic arn", "Value": {"Ref": "SNSTopic"}}
  }
}
